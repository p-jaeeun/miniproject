<% include header.ejs %>
      <div class="admin_container">
        <% include admin_menu.ejs %>
        <section class="admin_section">
          <div class="membership_group">
             <div class="membership_info">
               <h1>멤버십 신규 등록</h1><br/>
             <span>신규 고객 정보를</span><span> 입력해주세요.</span>
             </div>
             <form action="/admin/membership" method="post">
              <div class="membership_input">
                  <p>고객이름: <input type="text" name="newName" id="add_name" placeholder="고객명을 입력하세요."  required pattern="[가-힣]{2,5}" autocomplete="off"></p>
                  <p>차량번호: <input type="text" name="newNumber" id="add_carNum" placeholder="차량번호를 입력하세요." pattern="([0-9]{2})([가-힣]{1})([0-9]{4})" autocomplete="off"></p>
                  </div>
                  <input type="submit" id="addMember_btn" name="addMember_btn" value="등록">
             </form><br/>
             <% var membership;
             if(membership == null){
               membership ='';
             }
             %>
             <p><%= membership %></p>
          </div>
        </section>
      </div>
<% include footer.ejs %>
